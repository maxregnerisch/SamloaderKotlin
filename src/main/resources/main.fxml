<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicgen.ui.MainController">
   <top>
      <VBox>
         <children>
            <!-- Title Bar -->
            <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
               <children>
                  <Label text="AI Music Generator" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Control Panel -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
               <children>
                  <!-- Genre Selection -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Genre:" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="genreComboBox" prefWidth="120.0" />
                     </children>
                  </VBox>
                  
                  <!-- Mood Selection -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Mood:" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="moodComboBox" prefWidth="120.0" />
                     </children>
                  </VBox>
                  
                  <!-- Duration -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Duration (min):" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Spinner fx:id="durationSpinner" prefWidth="80.0" />
                     </children>
                  </VBox>
                  
                  <!-- Generate Button -->
                  <Button fx:id="generateButton" onAction="#onGenerateClicked" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Generate Song" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <SplitPane dividerPositions="0.7" orientation="HORIZONTAL">
         <items>
            <!-- Main Content Area -->
            <VBox spacing="10.0">
               <children>
                  <!-- Lyrics Input -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Lyrics (Optional):" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="lyricsTextArea" prefHeight="120.0" promptText="Enter lyrics here or leave empty for instrumental..." wrapText="true" />
                     </children>
                  </VBox>
                  
                  <!-- Waveform Display -->
                  <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Waveform:" style="-fx-font-weight: bold;" />
                        <Canvas fx:id="waveformCanvas" height="200.0" style="-fx-background-color: #2c3e50;" />
                     </children>
                  </VBox>
                  
                  <!-- Playback Controls -->
                  <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
                     <children>
                        <Button fx:id="playButton" onAction="#onPlayClicked" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Play" />
                        <Button fx:id="stopButton" onAction="#onStopClicked" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Stop" />
                        <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
                        <Label fx:id="timeLabel" text="00:00 / 00:00" />
                     </children>
                  </HBox>
                  
                  <!-- Export Controls -->
                  <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #bdc3c7; -fx-padding: 10;">
                     <children>
                        <Button fx:id="exportMp3Button" onAction="#onExportMp3Clicked" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Export MP3" />
                        <Button fx:id="exportWavButton" onAction="#onExportWavClicked" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" text="Export WAV" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="10.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Side Panel -->
            <VBox spacing="10.0">
               <children>
                  <!-- Song Info -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Song Information:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                        <TextArea fx:id="songInfoTextArea" editable="false" prefHeight="150.0" style="-fx-background-color: #ecf0f1;" />
                     </children>
                  </VBox>
                  
                  <!-- Track Mixer -->
                  <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Track Mixer:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                           <content>
                              <VBox fx:id="mixerPanel" spacing="10.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  
                  <!-- Generation Status -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Status:" style="-fx-font-weight: bold;" />
                        <Label fx:id="statusLabel" text="Ready to generate music..." wrapText="true" />
                        <ProgressIndicator fx:id="progressIndicator" visible="false" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <children>
            <Label text="AI Music Generator v1.0 - Professional Music Creation Suite" textFill="#bdc3c7">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>

