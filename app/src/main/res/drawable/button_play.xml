<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFE94560"
                android:endColor="#FFFF6B6B"
                android:angle="90" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="#FFFFD700" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFF6B6B"
                android:endColor="#FFE94560"
                android:angle="90" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="#FFFFD700" />
        </shape>
    </item>
</selector>

