<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Labyrinth3D" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
    </style>

    <style name="Theme.Labyrinth3D.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Labyrinth3D.Fullscreen" parent="Theme.Labyrinth3D.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Button Styles -->
    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="PlayButton" parent="GameButton">
        <item name="android:background">@drawable/button_play</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PauseButton" parent="GameButton">
        <item name="android:background">@drawable/button_pause</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
